{
  "name": "Beebo Memory Agent",
  "description": "AI assistant connected to the Beebo Memory MCP Bridge",
  "model": {
    "provider": "openai",
    "model": "gpt-4o",
    "temperature": 0.7
  },
  "voice": {
    "provider": "openai",
    "voice": "alloy",
    "rate": 1.0
  },
  "memory": {
    "enabled": true,
    "provider": "mcp",
    "server": "beebo-memory-mcp"
  },
  "mcpServers": {
    "beebo-memory-mcp": {
      "type": "rest",
      "baseUrl": "https://beebo-memory-mcp.onrender.com",
      "auth": {
        "type": "token",
        "token": "${MCP_TOKEN}",
        "headerName": "x-mcp-token"
      },
      "endpoints": {
        "addMemory": {
          "path": "/memories",
          "method": "POST",
          "body": {
            "text": "{text}",
            "type": "{type}",
            "tags": "{tags}",
            "source": "agent"
          }
        },
        "recallMemory": {
          "path": "/memories/recall",
          "method": "GET",
          "params": {
            "q": "{query}",
            "limit": "5"
          }
        },
        "searchMemories": {
          "path": "/memories/search",
          "method": "GET",
          "params": {
            "q": "{query}",
            "limit": "10"
          }
        },
        "getAllMemories": {
          "path": "/memories/all",
          "method": "GET"
        },
        "getRecentMemories": {
          "path": "/memories/recent",
          "method": "GET",
          "params": {
            "limit": "5"
          }
        },
        "getTodayMemories": {
          "path": "/memories/today",
          "method": "GET"
        },
        "getMemoryById": {
          "path": "/memories/{id}",
          "method": "GET"
        },
        "deleteMemory": {
          "path": "/memories/{id}",
          "method": "DELETE"
        }
      }
    }
  },
  "behavior": {
    "memoryPolicy": {
      "saveOnUserMessage": true,
      "autoRecall": true
    },
    "contextWindow": 20,
    "onStartupSay": "Memory bridge connected and ready."
  },
  "parameterConfiguration": {
    "format": "sse",
    "parameters": {
      "MCP_TOKEN": {
        "description": "Authentication token for Beebo Memory MCP service",
        "type": "string",
        "required": true,
        "sensitive": true,
        "default": "Zedy1101"
      },
      "BASE_URL": {
        "description": "Base URL for the memory service",
        "type": "string",
        "required": false,
        "default": "https://beebo-memory-mcp.onrender.com"
      },
      "MEMORY_LIMIT": {
        "description": "Default limit for memory recall queries",
        "type": "integer",
        "required": false,
        "default": 5,
        "min": 1,
        "max": 50
      }
    }
  }
}
